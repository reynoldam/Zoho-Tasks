#include <stdio.h>
#include <stdlib.h>

void init();
void search(int *arr,int b);


int main(){
    
    init(search);

    return 0;
}


void init(void (*s)(int *,int))
{
    int arr[100],b;
    printf("Enter the number of elements: ");
    scanf("%d",&b);
    printf("Enter the values: ");
    for(int i=0;i<b;i++)
    {
        scanf("%d",&arr[i]);

    }
    s(arr,b);

}

void search(int *arr,int b){
int num,f;
printf("Enter the value to be search: ");
scanf("%d",&num);
for(int i = 0;i<b;i++)
{
if(arr[i] == num)
{
f = 1;
}
}

if (f == 1)
{
printf("The Number is present in the array ");
}
else{
printf("Not present in the array");
}
}
